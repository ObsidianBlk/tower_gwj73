static func Which_Action(event : InputEvent, actions : Array[StringName]) -> StringName:
	for action in actions:
		if event.is_action(action):
			return action
	return &""

static func Event_Is_Action(event : InputEvent, actions : Array[StringName]) -> bool:
	return Which_Action(event, actions) != &""


